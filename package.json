{
  "name": "svg-smart-colorizer",
  "version": "1.0.0",
  "description": "🎨 一个智能的SVG随机颜色处理JavaScript库，能够智能识别SVG元素的颜色状态并进行合适的颜色处理",
  "main": "dist/svg-smart-colorizer.js",
  "module": "src/index.js",
  "browser": "dist/svg-smart-colorizer.min.js",
  "types": "src/types/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:dev && npm run build:prod",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docs": "jsdoc src/**/*.js -d docs",
    "prepublishOnly": "npm run build && npm test",
    "size": "bundlesize"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaolongmr/svg-smart-colorizer.git"
  },
  "keywords": [
    "svg",
    "color",
    "colorizer",
    "random",
    "smart",
    "intelligent",
    "graphics",
    "icon",
    "design",
    "frontend",
    "javascript",
    "library",
    "dom",
    "manipulation",
    "gradient",
    "fill",
    "stroke",
    "inheritance",
    "css",
    "web"
  ],
  "author": {
    "name": "xiaolongmr",
    "email": "xiaolongmr@example.com",
    "url": "https://github.com/xiaolongmr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xiaolongmr/svg-smart-colorizer/issues"
  },
  "homepage": "https://github.com/xiaolongmr/svg-smart-colorizer#readme",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdoc": "^4.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "bundlesize": "^0.18.0"
  },
  "bundlesize": [
    {
      "path": "./dist/svg-smart-colorizer.min.js",
      "maxSize": "15 kB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "semi": ["error", "always"]
    }
  },
  "engines": {
    "node": ">=14.0.0"
  }
}